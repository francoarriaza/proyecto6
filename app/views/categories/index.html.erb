<h1>Categories</h1>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Category</th>
      <th scope="col">Count</th>
    </tr>
  </thead>
  <tbody>
  <% @categories.each do |category| %>
    <tr>
      <td><%= link_to category.name, category %></td>
      <td><%= category.products.count %></td>
      <td><button type="button" class="btn btn-success"><%= link_to 'Edit', edit_category_path(category) %></td>
      <td><button type="button" class="btn btn-success"><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'New Category', new_category_path %>

<p id="notice"><%= notice %></p>


